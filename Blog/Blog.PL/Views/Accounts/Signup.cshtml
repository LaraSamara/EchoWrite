@model SignupViewModel;
@{
    ViewData["Title"] = "Signup";
}

@section Style {
    <link rel="stylesheet" href="~/css/Account/StyleSignup.css" />
}
<section class="">@* 
 *@        <div class="row-section  d-flex align-items-center justify-content-center" >
            <form asp-action="Signup" asp-controller="Accounts" method="post" class="w-50 d-flex align-items-center justify-content-between flex-column">
                <div class="title text-center">Sign Up</div>
                <div class="row d-flex align-items-center justify-content-between w-100">
                    <div class="input-field d-flex align-items-start justify-content-center flex-column">
                        <label asp-for="FirstName"> First Name</label>
                        <input asp-for="FirstName" />
                    </div>
                    <div class="input-field d-flex align-items-start justify-content-center flex-column">
                        <label asp-for="LastName"> Last Name</label>
                        <input asp-for="LastName" />
                    </div>
                </div>
                <div class="row d-flex align-items-center justify-content-between w-100">
                    <div class="input-field d-flex align-items-start justify-content-center flex-column ">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" />
                    </div>
                    <div class="input-field d-flex align-items-start justify-content-center flex-column">
                        <label asp-for="Address"> Address</label>
                        <input asp-for="Address" />
                    </div>
                </div>
                <div class="row d-flex align-items-center justify-content-between w-100">
                    <div class="input-field  d-flex align-items-start justify-content-center flex-column">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" />
                    </div>
                    <div class="input-field  d-flex align-items-start justify-content-center flex-column">
                        <label asp-for="ConfirmPassword">ConfirmPassword</label>
                        <input asp-for="ConfirmPassword" />
                    </div>
                </div>
                <div class="input-field d-flex align-items-center justify-content-center flex-column w-100">
                    <button type="submit" class="w-100">Sign Up</button>
                    <div class="link"> Already have an account? <a asp-action="Signin" asp-controller="Accounts">Sign in</a></div>
                </div>
            </form>
            <div class="img w-50">
                <img src="~/Images/Account/Signup.png" class="w-75" />
            </div>
        </div>
</section>