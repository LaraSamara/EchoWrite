@model EditPostViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Post</title>
    <link rel="stylesheet" href="~/css/User/Posts/StyleCreatePost.css" asp-append-version="true" />
</head>
<body>
    <section>
        <div class="head w-100 py-3">
            <div class="title text-center w-10">Update Post</div>
        </div>
        <form class="d-flex align-items-start justify-content-center flex-column p-4 UpdatePostForm" id="UpdatePostForm">
            <input asp-for="Id" type="hidden" />
            <select class="my-3 w-100" asp-for="CategoryId" asp-items="@Model.Category">
                <option value="">Select a category</option>
            </select>
            <textarea class="w-100 my-3"  asp-for="Content"></textarea>
        </form>
    </section>
</body>
</html>