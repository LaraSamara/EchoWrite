@model CreatePostViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <link rel="stylesheet" href="~/css/User/Posts/StyleCreatePost.css" asp-append-version="true" />
</head>
<body>
    <section class="alert">
        <div class="head w-100 d-flex align-items-center justify-content-center flex-column py-3">
            <div class="title text-center w-10">Create Post</div>
            <div class="quotes">
                "Don't just write words, paint your thoughts with them"
            </div>
        </div>
        <form class="d-flex align-items-start justify-content-center flex-column p-4 addPostForm" id="addPostForm">
@*             <input asp-for="" />
 *@         <input asp-for="UserId" type="hidden"/>
            <input asp-for="UserProfilePictureUrl" type="hidden" />
            <input asp-for="UserName" type="hidden" />
            <select class="my-3 w-100" asp-for="CategoryId" asp-items="@Model.Category"></select>
            <textarea class="w-100 my-3" placeholder="Every post is a chance to make a difference, no matter how small" asp-for="Content"></textarea>
@*             <button class="w-100">Create Post</button>
 *@        </form>
    </section>
</body>
</html>