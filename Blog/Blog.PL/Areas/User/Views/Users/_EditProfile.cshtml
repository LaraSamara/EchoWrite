@model EditUserViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    @* Bootstrap *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/User/Users/StyleEditProfile.css" asp-append-version="true" />
</head>
<body>
    <section class="overflow-y: auto;">
        <div class="heading w-100 d-flex align-items-center justify-content-center flex-column py-3">Edit Your  Info</div>
        <form class="d-flex align-items-start justify-content-center flex-column p-4 addPostForm" id="EditProfileForm" method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <div class="form-input d-flex align-items-start justify-content-center flex-column">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" value="@Model.FirstName" class="form-control mt-2" id="exampleInputPassword1" fdprocessedid="3mgg2b" placeholder="Name">
            </div>
            <div class="form-input d-flex align-items-start justify-content-center flex-column">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" value="@Model.LastName" class="form-control mt-2" id="exampleInputPassword1" fdprocessedid="3mgg2b" placeholder="Name">
            </div>
            <div class="form-input d-flex align-items-start justify-content-center flex-column">
                <label asp-for="Bio"></label>
                <textarea class="w-100 mt-2" asp-for="Bio">@Model.Bio</textarea>
            </div>
            <div class=" d-flex align-items-start justify-content-center flex-column">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control-file ImageInput mt-2">
            </div>
            <div class="">
                <img src="#" id="ImagePreview" style="display: none;width:200px" />
            </div>
        </form>
    </section>
</body>
</html>