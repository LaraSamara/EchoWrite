    @model Blog.PL.Areas.Admin.ViewModels.CommentViewModel
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="card m-4">
    <div class="head d-flex align-items-center justify-content-start w-100">
        <div class="d-flex align-items-start justify-content-center flex-column">
            <a class="d-flex align-items-center justify-content-start" asp-area="User" asp-controller="Users" asp-action="Profile" asp-route-UserId="@Model.UserId">
                <div class="img me-2">
                    @if (Model.HavePicture)
                    {
                        <img src="~/Files/Images/@Model.UserProfilePictureUrl" alt="User Picture" />
                    }
                    else
                    {
                        <div class="content  text-uppercase">@Model.UserProfilePictureUrl</div>
                    }
                </div>
                <div class="text">
                    <div class="name text-capitalize">@Model.UserName</div>
                    @if (Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss") == Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss"))
                    {
                        <div class="report-date">
                            <span>C: @Model.CreatedAt</span>
                        </div>
                    }
                    else
                    {
                        <div class="report-date">
                            <span>U: @Model.UpdatedAt </span>
                        </div>
                    }
                </div>
            </a>
            <div class="mt-3">@Model.Content</div>
        </div>
    </div>
</div>
